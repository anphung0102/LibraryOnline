<script>
    //load môn học ebook
    $(document).ready(function () {
        var warnOptions = {
            autoHideDelay: 1000,
            showAnimation: "fadeIn",
            hideAnimation: "fadeOut",
            hideDuration: 700,
            arrowShow: false,
            className: "warn",
        };
        var successOptions = {
            autoHideDelay: 1000,
            showAnimation: "fadeIn",
            hideAnimation: "fadeOut",
            hideDuration: 700,
            arrowShow: false,
            className: "success",
        };
        var errorOptions = {
            autoHideDelay: 1000,
            showAnimation: "fadeIn",
            hideAnimation: "fadeOut",
            hideDuration: 700,
            arrowShow: false,
            className: "error",
        };

        var index = 0;
        var flag = false;
        $.ajax({
            type: "GET",
            url: "/api/ManageOfAdminAPI/GetSubjectThesis",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                InitTable(data);
            }
        });
        function InitTable(data) {
            $('#loadsubject').DataTable({
                data: data,
                "autoWidth": false,
                "columns": [
                    { "data": "id", className: "id" },
                    { "data": "subthesis_id", className: "subthesis_id" },
                    { "data": "name", className: "name" },
                    { "data": "edit" },
                    //{ "data": "del" },
                ],

                "columnDefs": [{
                    "targets": -1,
                    "data": null,
                    "defaultContent": "<button type='button' class='btn btn-warning btnEdit' data-toggle='modal' data-target='#myModalEdit'><i class='far fa-edit'></i></button><button type='button' class='btn btn-danger btnDel'><i class='far fa-trash-alt'></i></button>"
                },
                //{
                //    "targets": -1,
                //    "data": null,
                //    "defaultContent": "<button type='button' class='btn btn-danger btnDel'>Xóa</button>"
                //    },
                //    { responsivePriority: 2, targets: -2 },
                    { responsivePriority: 1, targets: -1 }
                ]
            });
        }

        $("#btnSaveAdd").click(function () {
            var subid = $("#subid").val();
            var name = $("#name").val();
            var data = {};
            data.subthesis_Id = subid;
            data.name = name;
            if (subid == null || subid == "") {
                $("#subid").focus();
                $.notify("Bạn phải nhập mã môn!", warnOptions);
                return;
            }
            if (name == null || name == "") {
                $("#name").focus();
                $.notify("Bạn phải nhập tên môn!", warnOptions);
                return;
            }
            else {
                $.ajax({
                    type: "POST",
                    url: "/api/ManageOfAdminAPI/CreateSubjectThesis",
                    data: JSON.stringify(data),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        if (result.isSuccess) {
                            $.notify("Tạo môn thành công!", successOptions);
                            //add row datatable
                            var t = $('#loadsubject').DataTable();
                            t.row.add({
                                "id": result.id,
                                "subthesis_id": result.subthesis_Id,
                                "name": result.name
                            }).draw();
                            t.responsive.recalc();
                            $("#formThesis")[0].reset();//reset form
                        } else {
                            $.notify("Tên môn hoặc mã môn đã bị trùng!", errorOptions);
                        }
                    }
                });

            }

        });

        $('#loadsubject tbody').on('click', 'tr', function () {
            //var rowCurrent = $(this);
            //console.log("index", rowCurrent);
            //index = rowCurrent[0].sectionRowIndex;
            //console.log("rowCurrent", index);
            var table = $('#loadsubject').DataTable();
            //lấy index currentrow
            index = table.rows({ order: 'applied' }).nodes().indexOf(this);
            var id = $(this).closest("tr").find(".id").text();
            var name = $(this).closest("tr").find(".name").text();
            var subthesis_id = $(this).closest("tr").find(".subthesis_id").text();
            $("#nameEdit").val(name);
            $("#idEdit").val(id);
            $("#subidEdit").val(subthesis_id);
        });

        $('body').on('click', '#btnSaveEdit', function () {
            var id = $("#idEdit").val();
            var subid = $("#subidEdit").val();
            var name = $("#nameEdit").val();
            var data = {};
            data.id = id;
            data.subthesis_Id = subid;
            data.name = name;
            if (subid == null || subid == "") {
                $("#subidEdit").focus();
                $.notify("Bạn phải nhập mã môn!", warnOptions);
                return;
            }
            if (name == null || name == "") {
                $("#nameEdit").focus();
                $.notify("Bạn phải nhập tên môn!", warnOptions);
                return;
            }
            else {
                $.ajax({
                    type: "POST",
                    url: "/api/ManageOfAdminAPI/EditSubjectThesisById",
                    data: JSON.stringify(data),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        if (result.isSuccess) {
                            $.notify("Cập nhật thành công!", successOptions);
                            var t = $('#loadsubject').DataTable();
                            //t.cell(index, 1).data(result.subthesis_Id).draw();
                            //t.cell(index, 2).data(result.name).draw();
                            t.cell(':eq(' + index + ')', 1).data(result.subthesis_Id).draw();
                            t.cell(':eq(' + index + ')', 2).data(result.name).draw();
                            t.responsive.recalc();
                        } else {
                            $.notify("Cập nhật thất bại!Mã hoặc tên môn bị trùng!", errorOptions);
                        }
                    }
                });

            }
        });

        //hàm xóa
        function DeleteEbook(id) {
            var r = confirm("Bạn có chắc muốn xóa không?");

            if (r == true) {
                var data = {};
                data.id = id;
                $.ajax({
                    type: "POST",
                    url: "/api/ManageOfAdminAPI/DeleteSubjectThesis",
                    data: JSON.stringify(data),
                    contentType: "application/json; charset=utf-8",
                    dataType: "json",
                    success: function (result) {
                        $.notify(result, successOptions);
                        var table = $('#loadsubject').DataTable();
                        //table.row(index).remove().draw();
                        table.row(':eq(' + index + ')').remove().draw();
                    }
                });
            }
        }
        //Xóa
        $('#loadsubject tbody').on('click', '.btnDel', function () {
            debugger
            var id = $(this).closest("tr").find(".id").text();
            DeleteEbook(id);

        });


    });

</script>
