@model LibraryOnline.Models.ResetPasswordModel
@{
    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet">
<h2 style="text-align: center;">Lấy lại mật khẩu</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div class="form-horizontal" style="text-align:center;">
    <hr />
    <div class="text-danger" style="margin-bottom: 10px;color: #0aad0a !important;">
        @ViewBag.Message
    </div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label class="control-label col-md-2" style="margin-left: -285px">Nhập mật khẩu mới: </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", @style = " margin-top: -38px;margin-left: 620px;width: 280px" } })
            @*@Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })*@
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" style="margin-left: -285px">Nhập lại mật khẩu mới: </label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @style = " margin-top: -38px;margin-left: 620px;width: 280px" } })
            @*@Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })*@
        </div>
    </div>
    <div class="form-group">
        @Html.HiddenFor(a => a.ResetCode)
    </div>
    <div class="form-group" style="margin-left: 184px">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="btn btn-success" />
        </div>
    </div>
</div>
}
<div style= "text-decoration-line: none;margin-left: 500px;">
    @Html.ActionLink("Trở về", "Index", "Login")
</div>
