<!--Load Ebook-->
<script>
    //load ebook
    $(document).ready(function () {
        $.ajax({
            type: "GET",
            url: "/api/AdminAPI/GetEbookByAdmin",
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                InitTable(data);
            }
        });
        function InitTable(data) {
            $('#loadsubject').DataTable({
                data: data,
                "columns": [
                    { "data": "id" },
                    { "data": "ebook_id" },
                    { "data": "title" },
                    { "data": "author" },
                    { "data": "year" },
                    { "data": "describe" },
                    { "data": "filename" },
                    {
                        "data": "date_upload", "render": function (data) {

                            var d = new Date(data);
                            return d.toLocaleString();
                        },
                    }
                ]
            });
        }
        function clearEditSub() {
            $("input[id='EditNameSub_Eb']").val("");
        }
        function clearAddSub() {
