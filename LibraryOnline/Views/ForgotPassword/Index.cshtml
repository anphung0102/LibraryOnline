    Layout = null;
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet">

<h2 style="text-align: center">Quên mật khẩu</h2>

@using (Html.BeginForm())
{
<div class="form-horizontal" style="text-align:center;">
    <hr />
    <div class="text-success" style="margin-bottom:10px;">
        @ViewBag.Message
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" style="margin-left: -285px;">Nhập Email: </label>
        @Html.TextBox("EmailID", "", new { @class = "form-control", @style = " margin-top: -38px;margin-left: 587px;width: 280px" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Gửi" style="margin-left: 90px;" class="btn btn-success" />
        </div>
    </div>
</div>
}
<div style= "text-decoration-line: none;margin-left: 500px;">
    @Html.ActionLink("Trở về", "Index", "Login")
</div>
