<!--Xóa môn-->
<script>
    //hàm xóa
    function DeleteSubEssay(id) {
        var r = confirm("Bạn có chắc muốn xóa không?");

        if (r == true) {
            var data = {};
            data.id = id;
            $.ajax({
                type: "POST",
                url: "/api/ManageOfAdminAPI/DeleteSubjectThesis",
                data: JSON.stringify(data),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result) {
                    alert(result);
                }
            });
        }
    }

    var index = 0;
    var flag = false;
    $(document).ready(function () {
        //click vào row của datatable
        $('#loadsubject tbody').on('click', 'tr', function () {
            flag = true;
            var table = $('#loadsubject').DataTable();
            var rowCurrent = $(this);
            console.log("index", rowCurrent);
            index = rowCurrent[0].sectionRowIndex;
            console.log("rowCurrent", index);
            if ($(this).hasClass('selected')) {
                $(this).removeClass('selected');
            }
            else {
                table.$('tr.selected').removeClass('selected');
                $(this).addClass('selected');
            }

        });
        //xóa 1 row datatable
        $('#btnDel').click(function () {
            var table = $('#loadsubject').DataTable();
            console.log("aaa", table.rows({ selected: true }).data());
            var rowData = table.rows({ selected: true }).data()[index]['id'];
            console.log("rowData", rowData);
            if (flag == true) {
                DeleteSubEssay(rowData);
                table.row('.selected').remove().draw(false);
            }
        });
        $('body').on('click', '#btnEdit', function (e) {
            var table = $('#loadsubject').DataTable();
            var name = table.rows({ selected: true }).data()[index]['name'];
            alert(name);
            $("input[id='EditNameSub_Eb']").val(name);
            $("#EditSub").show();
        });
        $("#btnSaveEdit").click(function () {
            var table = $('#loadsubject').DataTable();
            var id = table.rows({ selected: true }).data()[index]['id'];
            var name = table.rows({ selected: true }).data()[index]['name'];
            var data = {};
            data.id = id;
            data.name = name;
            $.ajax({
                type: "POST",
                url: "/api/EbookAPI/EditSubjectById",
                data: JSON.stringify(data),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (result) {
                    if (result.isSuccess) {
                        alert("Sửa thành công.");
                        //add row datatable
                        var t = $('#loadsubject').DataTable();
                        //t.row.edit({
                        //    "id": id,
                        //    "name": name
                        //}).draw();
                        alert(index);
                        t.row(index).edit({
                            name: name
                        });
                    } else {
                        alert("Sửa không thành công.");
                    }
                }
            });
        });
    });
</script>
<!--Tạo môn học-->
<script>
    $("#createSubEssay").click(function () {
        var data = {};
        data.name = $("input[id='AddNameSub_Essay']").val();
        $.ajax({
            type: "POST",
            url: "/api/ManageOfAdminAPI/CreateSubjectThesis",
            data: JSON.stringify(data),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (result) {
                if (result.isSuccess) {
                    alert("Tạo môn thành công.");
                    //add row datatable
                    var t = $('#loadsubject').DataTable();
                    t.row.add({
                        "id": result.id,
                        "subthesis_id": result.subthesis_Id,
                        "name": result.name
                    }).draw();
                } else {
                    alert("Tên môn đã tồn tại! Vui lòng đặt tên khác.");
                }
            }
        });
    });
</script>
